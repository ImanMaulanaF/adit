<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/utama"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textSize="10dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Purchasing"
                android:textSize="12dp"
                android:textStyle="bold"
                android:fontFamily="@font/verdana"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/pengeluaran"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="160dp"
            app:cornerRadius = "20dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/sell"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengeluaran"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="150dp"
            android:fontFamily="@font/verdana"
            android:textColor="@color/white"
            android:textSize="10dp"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/stok"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="225dp"
            app:cornerRadius = "20dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/stok"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="235dp"
            android:fontFamily="@font/verdana"
            android:textColor="@color/white"
            android:textSize="10dp"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/logout"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="290dp"
            app:cornerRadius = "20dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/logout"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="295dp"
            android:fontFamily="@font/verdana"
            android:textColor="@color/white"
            android:textSize="10dp"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok Saat Ini"
            android:layout_marginTop="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/verdana"
            android:layout_gravity="center_horizontal"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riwayat Stok Masuk dan Keluar"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        >
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    >
</androidx.cardview.widget.CardView>
</LinearLayout>
