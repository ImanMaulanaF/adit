<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/utama"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/verdana"
                android:text="STOK"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Barang Masuk"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/pembelian"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/fastfood"
            app:cornerRadius="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/verdana"
            android:text="Pembelian"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <Button
            android:id="@+id/stok"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/stok"
            app:cornerRadius="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/verdana"
            android:text="Stok"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="14dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/logout"
            app:cornerRadius="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/verdana"
            android:text="Keluar"
            android:textColor="@color/white"
            android:textSize="10dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="125dp"
        android:backgroundTint="@color/utama_200"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="Nama Barang"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="125dp"
                    android:text="Jumlah"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/barang"
                    android:layout_width="210dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/black"
                    android:entries="@array/barang" />

                <ImageButton
                    android:id="@+id/btn_tambah"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tambah" />

                <TextView
                    android:id="@+id/jumlah"
                    android:layout_width="30sp"
                    android:layout_height="40sp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btn_kurang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/kurang"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Pilih Supplier"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"></TextView>

            <Spinner
                android:id="@+id/supplier"
                android:layout_width="210dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/black"
                android:entries="@array/supplier" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:text="Dibeli Pada : "
                    android:textColor="@color/black"
                    android:textSize="18dp"/>

                <EditText
                    android:id="@+id/waktu"
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:ems="10"
                    android:inputType="datetime"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
                <ImageButton
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:background="@drawable/baseline_date_range_24"/>
            </LinearLayout>

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="Catatan: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Total :"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

                <TextView
                    android:id="@+id/totalHarga"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="Rp. "
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_submit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/submit" />


            </LinearLayout>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="230dp"
                android:text="Tambahkan Data"
                android:textStyle="bold"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
</RelativeLayout>


